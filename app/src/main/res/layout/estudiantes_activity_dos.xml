<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.github.florent37.arclayout.ArcLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:elevation="10dp"
                        app:arc_position="bottom"
                        app:arc_height="35dp"
                        app:arc_cropDirection="cropInside">

                        <com.flaviofaria.kenburnsview.KenBurnsView
                            android:id="@+id/idPerfilEstudiantesFotoHeader"
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:src="@drawable/edificio"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/interfaz_overlay_bajo" />


                    </com.github.florent37.arclayout.ArcLayout>


                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true">

                <FrameLayout
                    android:id="@+id/idEstudiantesContenedor"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="190dp">


                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.github.florent37.arclayout.ArcLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:arc_height="35dp"
                            app:arc_cropDirection="cropOutside"
                            app:arc_position="top">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:background="@color/negroprincipal"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="80dp"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="12sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_light"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Nombre"
                                        android:textAlignment="center"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/idPerfilEstudiantesNombreUsuario"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="16sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Nombre"
                                        android:textSize="16sp" />



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="12sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_light"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Carrera"
                                        android:textAlignment="center"
                                        android:textSize="12sp"  />

                                    <TextView
                                        android:id="@+id/idPerfilEstudiantesCarreraUsuario"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="16sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Carrera"
                                        android:textAlignment="center"
                                        android:textSize="16sp" />




                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="12sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_light"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Matricula"
                                        android:textAlignment="center"
                                        android:textSize="12sp"  />

                                    <TextView
                                        android:id="@+id/idPerfilEstudiantesMatriculaUsuario"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="16sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Matricula"
                                        android:textAlignment="center"
                                        android:textSize="16sp" />



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="12sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_light"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Correo"
                                        android:textAlignment="center"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/idPerfilEstudiantesCorreoUsuario"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="16sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Correo"
                                        android:textSize="16sp" />



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="12sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_light"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Genero"
                                        android:textAlignment="center"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/idPerfilEstudiantesGeneroUsuario"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginTop="10dp"
                                        android:autoSizeMaxTextSize="16sp"
                                        android:autoSizeMinTextSize="10sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:fontFamily="@font/ubuntu_medium"
                                        android:shadowDx="1.5"
                                        android:shadowDy="1.3"
                                        android:shadowRadius="1.6"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/blanco"
                                        android:text="Genero"
                                        android:textSize="16sp" />

                                    <LinearLayout
                                        android:id="@+id/cardEstu3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/buttonstyle"
                                        android:backgroundTint="@color/rojo_bajo"
                                        android:layout_marginStart="20dp"
                                        android:layout_marginEnd="20dp"
                                        android:layout_marginBottom="5dp"
                                        android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/idPerfilEstudiantescardCerrarSesion"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:cardBackgroundColor="@color/rojo_bajo">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:orientation="vertical">



                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:autoSizeMaxTextSize="15sp"
                                                    android:autoSizeMinTextSize="10sp"
                                                    android:autoSizeStepGranularity="2sp"
                                                    android:fontFamily="@font/ubuntu"
                                                    android:textStyle="bold"
                                                    android:shadowColor="@color/black"
                                                    android:shadowDx="1.5"
                                                    android:shadowDy="1.3"
                                                    android:shadowRadius="1.6"
                                                    android:textColor="@color/blanco"
                                                    android:text="Cerrar Sesión"
                                                    android:textAlignment="center"
                                                    android:textSize="15sp"
                                                    app:autoSizeTextType="uniform" />


                                            </LinearLayout>

                                        </androidx.cardview.widget.CardView>


                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>




                        </com.github.florent37.arclayout.ArcLayout>


                    </androidx.coordinatorlayout.widget.CoordinatorLayout>


                </FrameLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/idEstudiantesFotoUsuarioMargen"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="147.5dp"
                    android:src="@color/colorAccent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/idPerfilEstudiantesFotoUsuario"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="150dp"
                    android:src="@drawable/perfilpericodefault" />


                <ImageView
                    android:id="@+id/idPerfilEstudiantesIconoCarreraUsuario"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="240dp"
                    android:src="@drawable/itsvclogo"/>


            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/idPerfilEstudiantesToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_medium"
                android:shadowColor="@color/black"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                app:theme="@style/ToolbarColor"
                app:popupTheme="@style/AppTheme"
                app:title="Perfil"
                app:titleTextColor="@color/blanco"
                android:background="@drawable/interfaz_overlay_bajo_invertida"
                android:minHeight="?attr/actionBarSize" />


        </RelativeLayout>



    </LinearLayout>


</ScrollView>