<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialogoAgregarNotas"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/idAgregarLayoutPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="6dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/idAgregartxtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="Agregar Titulo de la nota"
                    android:textColor="@color/blanco" />

                <EditText
                    android:id="@+id/idAgregaretTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/ubuntu_light"
                    android:hint="Titulo"
                    android:inputType="textCapSentences"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:textColor="@color/blanco"
                    android:textColorHint="@color/grisclaro" />

                <TextView
                    android:id="@+id/idAgregartxtCuerpo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="Agregar nota"
                    android:textColor="@color/blanco" />

                <EditText
                    android:id="@+id/idAgregaretCuerpo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/ubuntu_light"
                    android:hint="Nota"
                    android:inputType="textCapSentences"
                    android:maxLines="10"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:textColor="@color/blanco"
                    android:textColorHint="@color/grisclaro" />

                <TextView
                    android:id="@+id/idAgregartxtFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="Agregar fecha"
                    android:textColor="@color/blanco" />

                <EditText
                    android:id="@+id/idAgregaretFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/ubuntu_light"
                    android:hint="Fecha"
                    android:inputType="date"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:textColor="@color/blanco"
                    android:textColorHint="@color/grisclaro" />

                <TextView
                    android:id="@+id/idAgregartxtHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="Agregar hora"
                    android:textColor="@color/blanco" />

                <EditText
                    android:id="@+id/idAgregaretHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:focusable="false"
                    android:inputType="time"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:textColor="@color/blanco"
                    android:textColorHint="@color/grisclaro"
                    android:hint="Hora"
                    android:fontFamily="@font/ubuntu_light" />

                <TextView
                    android:id="@+id/idAgregartxtColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="Dale color a tu nota"
                    android:textColor="@color/blanco" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/idCompEditNotasColorContenedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/grisclaro"
                    >

                <androidx.cardview.widget.CardView
                    android:id="@+id/idAgregaretColor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/grisoscuro"/>
                </androidx.cardview.widget.CardView>


                <TextView
                        android:id="@+id/idAgregartxtColorInvisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/black"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textColor="@color/blanco"
                        android:visibility="gone"
                        />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:padding="6dp">


                    <Button
                        android:id="@+id/idAgregarfabCancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/buttonstyle"
                        android:backgroundTint="@color/rojo"
                        android:fontFamily="@font/ubuntu_light"
                        android:shadowColor="@color/black"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:text="Cancelar"
                        android:textColor="@color/blanco" />

                    <Button
                        android:id="@+id/idAgregarfabAceptar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/buttonstyle"
                        android:backgroundTint="@color/verde"
                        android:fontFamily="@font/ubuntu_light"
                        android:shadowColor="@color/black"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:text="Guardar"
                        android:textColor="@color/blanco"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>